MainActivity.java


public class MainActivity extends AppCompatActivity {
   private ImageView imageViewFlower;
   private TextView textViewFlowerInfo;




   @Override
   protected void onCreate(Bundle savedInstanceState) {
       super.onCreate(savedInstanceState);
       setContentView(R.layout.activity_main);
       imageViewFlower = findViewById(R.id.imageViewFlower);


       // Flower Image Views
       ImageView imageFlower1 = findViewById(R.id.imageFlower1);
       ImageView imageFlower2 = findViewById(R.id.imageFlower2);
       ImageView imageFlower3 = findViewById(R.id.imageFlower3);
       ImageView imageFlower4 = findViewById(R.id.imageFlower4);
       ImageView imageFlower5 = findViewById(R.id.imageFlower5);


       // Flower Text Views
       TextView textViewFlower1 = findViewById(R.id.textViewFlower1);
       TextView textViewFlower2 = findViewById(R.id.textViewFlower2);
       TextView textViewFlower3 = findViewById(R.id.textViewFlower3);
       TextView textViewFlower4 = findViewById(R.id.textViewFlower4);
       TextView textViewFlower5 = findViewById(R.id.textViewFlower5);


       // Set OnClickListener for each flower image
       imageFlower1.setOnClickListener(new View.OnClickListener() {
           @Override
           public void onClick(View v) {
               imageViewFlower.setImageResource(R.drawable.rose1); // Flower 1
               textViewFlower1.setText("Rose: Known for its beauty, it symbolizes love and passion.");
           }
       });


       imageFlower2.setOnClickListener(new View.OnClickListener() {
           @Override
           public void onClick(View v) {
               imageViewFlower.setImageResource(R.drawable.rose2); // Flower 2
               textViewFlower2.setText("Lily: A symbol of purity, lilies are elegant and fragrant.");
           }
       });


       imageFlower3.setOnClickListener(new View.OnClickListener() {
           @Override
           public void onClick(View v) {
               imageViewFlower.setImageResource(R.drawable.rose3); // Flower 3
               textViewFlower3.setText("Sunflower: Bright and cheerful, it represents happiness and positivity.");
           }
       });


       imageFlower4.setOnClickListener(new View.OnClickListener() {
           @Override
           public void onClick(View v) {
               imageViewFlower.setImageResource(R.drawable.rose4); // Flower 4
               textViewFlower4.setText("Daisy: Simple and beautiful, daisies symbolize innocence and new beginnings.");
           }
       });


       imageFlower5.setOnClickListener(new View.OnClickListener() {
           @Override
           public void onClick(View v) {
               imageViewFlower.setImageResource(R.drawable.rose5); // Flower 5
               textViewFlower5.setText("Orchid: Exotic and rare, orchids represent strength and beauty.");
           }
       });
   }
}
