MainActivity.java

public class MainActivity extends AppCompatActivity {


   @Override
   protected void onCreate(Bundle savedInstanceState) {
       super.onCreate(savedInstanceState);
       EdgeToEdge.enable(this);
       setContentView(R.layout.activity_main);
       // RelativeLayout Button Click Event
       Button relativeButton = findViewById(R.id.relative_button);
       relativeButton.setOnClickListener(view ->
               Toast.makeText(this, "RelativeLayout Button Clicked", Toast.LENGTH_SHORT).show()
       );


       // ConstraintLayout Button Click Event
       Button constraintButton = findViewById(R.id.constraint_button);
       constraintButton.setOnClickListener(view ->
                       Toast.makeText(this, "ConstraintLayout Button Clicked", Toast.LENGTH_SHORT).show());
   }
}

