MainActivity.java


public class MainActivity extends AppCompatActivity {
   CheckBox ch1, ch2, ch3;
   RadioGroup rg;


   Button submit;




   @SuppressLint("MissingInflatedId")
   @Override
   protected void onCreate(Bundle savedInstanceState) {
       super.onCreate(savedInstanceState);


       setContentView(R.layout.activity_main);
       ch1 = findViewById(R.id.ch1);
       ch2 = findViewById(R.id.ch2);
       ch3 = findViewById(R.id.ch3);
       rg = findViewById(R.id.rg);
       submit = findViewById(R.id.submit);
       submit.setOnClickListener(new View.OnClickListener() {
           @Override
           public void onClick(View v) {
               StringBuilder selection = new StringBuilder("SELECT ADD ON COURSES:");
               if (ch1.isChecked())
                   selection.append("DATA MINING");
               if (ch2.isChecked())
                   selection.append("DATA STRUCTURES");
               if (ch3.isChecked())
                   selection.append("AWS");
               int selectedTimeId=rg.getCheckedRadioButtonId();
               if(selectedTimeId!=-1) {
                   RadioButton selectedradioButton = findViewById(selectedTimeId);
                   selection.append("\n SELECT DEPARTMENT:").append(selectedradioButton.getText());
               }
               Toast.makeText(MainActivity.this,selection.toString(), Toast.LENGTH_SHORT).show();
               int totalamount=0;
               StringBuilder result=new StringBuilder();
               result.append("Selected Items:");
               if(ch1.isChecked()){
                   result.append("Data Mining 3000Rs");
                   totalamount+=3000;
               }
               if(ch2.isChecked()){
                   result.append("Data Structures 3500Rs");
                   totalamount+=3500;
               }
               if(ch3.isChecked()){
                   result.append("AWS 4000Rs");
                   totalamount+=4000;
               }


               Toast.makeText(getApplicationContext(), result.toString(), Toast.LENGTH_LONG).show();
               Toast.makeText(getApplicationContext(), "Total: "+totalamount+"Rs", Toast.LENGTH_LONG).show();
           }
       });
   }


}


